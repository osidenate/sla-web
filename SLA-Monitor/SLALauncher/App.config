<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" />
  </startup>
  <appSettings>
    
    <!-- Base URI for Firebase REST requests -->
    <add key="FirebaseUri" value="https://sla-monitor-dev.firebaseio.com/" />

    <!-- This value should be set in a transformation file like App.Release.Config. 
         The transformation files are excluded from the repository so that we can open-source 
         without exposing our firebase account secret. -->
    <add key="FirebaseSecret" value="" />
    
    <!-- If true, the latency monitors will be setup using configuration from Firebase.
         If false, a latency monitor be setup using the Default configuration found below. (Useful for debugging.) -->
    <add key="UseFirebaseLatencyMonitorConfig" value="false" />

    <!-- The default host that we will be monitoring if StartMonitorImmediately is set to true -->
    <add key="DefaultHost" value="8.8.8.8" />

    <!-- How often to ping the host -->
    <add key="DefaultPollingInterval" value="500" />

    <!-- How long to wait for a ping to return -->
    <add key="DefaultTimeout" value="3500" />

    <!-- How the GUI should label the host -->
    <add key="DefaultDisplayName" value="Debug Host" />
    
  </appSettings>
</configuration>
